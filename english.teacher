
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vocabulary Enricher</title>
    <!-- Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Lora:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .serif-font {
            font-family: 'Lora', serif;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800 flex items-center justify-center min-h-screen p-4">

    <div class="w-full max-w-2xl mx-auto text-center p-8 bg-white rounded-2xl shadow-xl">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-4xl font-bold text-gray-900">Vocabulary Enricher ðŸ“š</h1>
            <p class="text-gray-600 mt-2">Learn a new word by typing its example sentence.</p>
        </div>

        <!-- Word Display Area -->
        <div id="word-container" class="text-left p-6 bg-gray-50 rounded-lg mb-6 border border-gray-200">
            <h2 id="word" class="text-4xl font-bold text-indigo-600 serif-font">Ephemeral</h2>
            <p id="definition" class="text-gray-700 mt-2 mb-4">Lasting for a very short time.</p>
            <p class="text-gray-500 italic">Example sentence to type:</p>
            <p id="sentence" class="text-lg font-medium text-gray-800 p-3 bg-indigo-50 rounded-md">The beauty of the cherry blossom is ephemeral, lasting only for a week.</p>
        </div>
        
        <!-- Typing and Control Area -->
        <div>
            <textarea id="typing-area" rows="3" placeholder="Retype the example sentence here..." class="w-full p-3 text-lg border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" autocomplete="off" autocorrect="off" spellcheck="false"></textarea>
            <div id="feedback" class="mt-2 h-6 text-lg font-semibold"></div>
            
            <div class="flex gap-4 mt-4">
                <button id="check-button" class="w-full px-6 py-3 bg-indigo-600 text-white font-bold rounded-lg shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 ring-offset-2 ring-indigo-500 transition-transform transform hover:scale-105">Check Answer</button>
                <button id="next-word-button" class="w-full px-6 py-3 bg-green-600 text-white font-bold rounded-lg shadow-md hover:bg-green-700 focus:outline-none focus:ring-2 ring-offset-2 ring-green-500 transition-transform transform hover:scale-105">Next Word</button>
            </div>
        </div>
    </div>

    <script>
        const wordDisplay = document.getElementById('word');
        const definitionDisplay = document.getElementById('definition');
        const sentenceDisplay = document.getElementById('sentence');
        const typingArea = document.getElementById('typing-area');
        const feedbackDisplay = document.getElementById('feedback');
        const checkButton = document.getElementById('check-button');
        const nextWordButton = document.getElementById('next-word-button');

        const vocabulary = [
            { word: 'Ephemeral', definition: 'Lasting for a very short time.', sentence: 'The beauty of the cherry blossom is ephemeral, lasting only for a week.' },
            { word: 'Ubiquitous', definition: 'Present, appearing, or found everywhere.', sentence: 'Smartphones have become ubiquitous in modern society.' },
            { word: 'Mellifluous', definition: 'A sound that is sweet and smooth, pleasing to hear.', sentence: 'Her mellifluous voice calmed the crying child.' },
            { word: 'Pulchritudinous', definition: 'Having great physical beauty.', sentence: 'The model was praised for her pulchritudinous appearance.' },
            { word: 'Serendipity', definition: 'The occurrence of events by chance in a happy or beneficial way.', sentence: 'Finding a twenty-dollar bill on the street was a moment of pure serendipity.' },
            { word: 'Quintessential', definition: 'Representing the most perfect or typical example of a quality or class.', sentence: 'A cup of tea is the quintessential British beverage.' },
            { word: 'Lethargic', definition: 'Affected by sluggishness and a lack of energy.', sentence: 'After the big meal, he felt too lethargic to go for a walk.' },
            { word: 'Idiosyncrasy', definition: 'A mode of behavior or way of thought peculiar to an individual.', sentence: 'His idiosyncrasy was that he had to arrange his books by color.' },
            { word: 'Anachronism', definition: 'Something that is conspicuously old-fashioned.', sentence: 'In this digital age, a typewriter is an anachronism.' },
            { word: 'Cacophony', definition: 'A harsh, discordant mixture of sounds.', sentence: 'The cacophony of city traffic gave him a headache.' }
        ];

        let currentWordIndex = -1;

        function displayNewWord() {
            // Get a random index different from the current one
            let newIndex;
            do {
                newIndex = Math.floor(Math.random() * vocabulary.length);
            } while (newIndex === currentWordIndex);
            
            currentWordIndex = newIndex;
            const wordData = vocabulary[currentWordIndex];

            wordDisplay.textContent = wordData.word;
            definitionDisplay.textContent = wordData.definition;
            sentenceDisplay.textContent = wordData.sentence;

            // Reset UI
            typingArea.value = '';
            typingArea.disabled = false;
            feedbackDisplay.textContent = '';
            checkButton.disabled = false;
            typingArea.focus();
        }
        
        function checkAnswer() {
            const correctSentence = vocabulary[currentWordIndex].sentence;
            const userAnswer = typingArea.value;

            // Normalize strings for comparison (lowercase, trim whitespace, remove punctuation)
            const normalize = (str) => str.trim().toLowerCase().replace(/[.,\/#!$%\^&\*;:{}=\-_`~()]/g,"");
            
            if (normalize(userAnswer) === normalize(correctSentence)) {
                feedbackDisplay.textContent = 'Correct! ðŸŽ‰';
                feedbackDisplay.className = 'mt-2 h-6 text-lg font-semibold text-green-600';
                typingArea.disabled = true;
                checkButton.disabled = true;
            } else {
                feedbackDisplay.textContent = 'Not quite, try again!';
                feedbackDisplay.className = 'mt-2 h-6 text-lg font-semibold text-red-500';
            }
        }

        // Event Listeners
        nextWordButton.addEventListener('click', displayNewWord);
        checkButton.addEventListener('click', checkAnswer);
        typingArea.addEventListener('keyup', (event) => {
             if(event.key === 'Enter') {
                checkAnswer();
             }
        });

        // Load the first word when the script runs
        displayNewWord();

    </script>
</body>
</html>

